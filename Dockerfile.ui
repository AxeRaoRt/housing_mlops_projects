FROM python:3.10-slim

WORKDIR /app

RUN pip install --no-cache-dir \
    streamlit==1.37.1 \
    requests==2.32.3 \
    pandas==2.2.2 \
    numpy==2.0.2 \
    plotly>=5.18.0

COPY ui/ ui/
COPY data/ data/

EXPOSE 8501

CMD ["streamlit", "run", "ui/app.py", \
     "--server.port=8501", \
     "--server.address=0.0.0.0", \
     "--server.headless=true"]
